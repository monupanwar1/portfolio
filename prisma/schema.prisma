generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  ownerName    String
  jobRole      String
  bio          String
  gmail        String    @unique
  github       String?
  linkedin     String?
  aboutBio     String?
  aboutSection String?
  resumeUrl    String?
  projects     Project[] // One-to-many relation
  createdAt    DateTime  @default(now())
}

model Project {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  techStack   String
  description String
  imageUrl    String?
  repoLink    String? // âœ… GitHub repo link added here
  createdAt   DateTime @default(now())
}
